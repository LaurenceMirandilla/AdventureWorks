@model IEnumerable<AdventureWorksUI.DTO.ProductModelProductDescriptionCultureViewModel>

@{
    ViewData["Title"] = "Product Model Product Description Culture List";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Product Model ID</th>
            <th>Product Description ID</th>
            <th>Culture ID</th>
            <th>Modified Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductModelId</td>
                <td>@item.ProductDescriptionId</td>
                <td>@item.CultureId</td>
                <td>@item.ModifiedDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Details" asp-route-productModelId="@item.ProductModelId"
                       asp-route-productDescriptionId="@item.ProductDescriptionId"
                       asp-route-cultureId="@item.CultureId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-productModelId="@item.ProductModelId"
                       asp-route-productDescriptionId="@item.ProductDescriptionId"
                       asp-route-cultureId="@item.CultureId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
