@model AdventureWorksUI.DTO.ProductModelProductDescriptionCultureViewModel

@{
    ViewData["Title"] = "Delete";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Are you sure you want to delete this record?</h4>
    <dl class="row">
        <dt class="col-sm-2">Product Model ID</dt>
        <dd class="col-sm-10">@Model.ProductModelId</dd>

        <dt class="col-sm-2">Product Description ID</dt>
        <dd class="col-sm-10">@Model.ProductDescriptionId</dd>

        <dt class="col-sm-2">Culture ID</dt>
        <dd class="col-sm-10">@Model.CultureId</dd>

        <dt class="col-sm-2">Modified Date</dt>
        <dd class="col-sm-10">@Model.ModifiedDate.ToString("yyyy-MM-dd")</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="ProductModelId" />
        <input type="hidden" asp-for="ProductDescriptionId" />
        <input type="hidden" asp-for="CultureId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
