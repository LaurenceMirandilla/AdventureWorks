@model AdventureWorksUI.DTO.IllustrationViewModel

@{
    ViewData["Title"] = "Delete Illustration";
}

<h2>Delete Illustration</h2>

<p>Are you sure you want to delete this illustration?</p>

<div class="form-group">
    <label for="Diagram">Diagram</label>
    <textarea id="Diagram" name="Diagram" class="form-control" rows="5" readonly>@Model.Diagram</textarea>
</div>

<div class="form-group mt-2">
    <label for="ModifiedDate">Modified Date</label>
    <input type="date" id="ModifiedDate" name="ModifiedDate" value="@Model.ModifiedDate.ToString("yyyy-MM-dd")" class="form-control" readonly />
</div>

<form method="post">
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary mt-3">Cancel</a>
</form>
