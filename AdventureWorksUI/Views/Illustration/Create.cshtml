@model AdventureWorksUI.DTO.IllustrationViewModel

@{
    ViewData["Title"] = "Create Illustration";
}

<h2>Create Illustration</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form method="post">
    <div class="form-group">
        <label for="Diagram">Diagram</label>
        <textarea id="Diagram" name="Diagram" class="form-control" rows="5">@Model?.Diagram</textarea>
    </div>

    <div class="form-group mt-2">
        <label for="ModifiedDate">Modified Date</label>
        <input type="date" id="ModifiedDate" name="ModifiedDate"
               value="@Model?.ModifiedDate.ToString("yyyy-MM-dd")" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>