@model IEnumerable<AdventureWorksUI.DTO.WorkOrderViewModel>

@{
    ViewData["Title"] = "Work Orders";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>WorkOrder ID</th>
            <th>Product ID</th>
            <th>Order Qty</th>
            <th>Stocked Qty</th>
            <th>Scrapped Qty</th>
            <th>Start Date</th>
            <th>Due Date</th>
            <th>Modified Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.WorkOrderId</td>
                <td>@item.ProductId</td>
                <td>@item.OrderQty</td>
                <td>@item.StockedQty</td>
                <td>@item.ScrappedQty</td>
                <td>@item.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@item.DueDate.ToString("yyyy-MM-dd")</td>
                <td>@item.ModifiedDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.WorkOrderId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.WorkOrderId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.WorkOrderId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

