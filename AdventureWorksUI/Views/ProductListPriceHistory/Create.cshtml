@model AdventureWorksUI.DTO.ProductListPriceHistoryViewModel
@{
    ViewData["Title"] = "Add Product Price History";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" class="w-50">
    <div class="mb-2">
        <label>Product ID</label>
        <input asp-for="ProductId" class="form-control" />
    </div>
    <div class="mb-2">
        <label>Start Date</label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>
    <div class="mb-2">
        <label>End Date</label>
        <input asp-for="EndDate" type="date" class="form-control" />
    </div>
    <div class="mb-2">
        <label>List Price</label>
        <input asp-for="ListPrice" type="number" step="0.01" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

