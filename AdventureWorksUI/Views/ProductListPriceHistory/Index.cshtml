@model IEnumerable<AdventureWorksUI.DTO.ProductListPriceHistoryViewModel>
@{
    ViewData["Title"] = "Product List Price History";
}

<h2>@ViewData["Title"]</h2>

<form method="get" class="mb-3">
    <input type="number" name="productId" value="@Context.Request.Query["productId"]"
           placeholder="Filter by Product ID" class="form-control w-25 d-inline" />
    <button type="submit" class="btn btn-primary">Search</button>
    <a asp-action="Create" class="btn btn-success">Add New</a>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Product ID</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>List Price</th>
                <th>Modified Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductListPriceHistoryId</td>
                    <td>@item.ProductId</td>
                    <td>@item.StartDate.ToShortDateString()</td>
                    <td>@item.EndDate?.ToShortDateString()</td>
                    <td>@item.ListPrice.ToString("C")</td>
                    <td>@item.ModifiedDate.ToShortDateString()</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.ProductListPriceHistoryId" class="btn btn-info btn-sm">View</a>
                        <a asp-action="Edit" asp-route-id="@item.ProductListPriceHistoryId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.ProductListPriceHistoryId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

