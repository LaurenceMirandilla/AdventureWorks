@model AdventureWorksUI.DTO.DocumentViewModel
@{
    ViewData["Title"] = "Document Details";
}
<h2>@Model.Title</h2>
<hr />
<dl class="row">
    <dt class="col-sm-3">File Name</dt>
    <dd class="col-sm-9">@Model.FileName</dd>
    <dt class="col-sm-3">Extension</dt>
    <dd class="col-sm-9">@Model.FileExtension</dd>
    <dt class="col-sm-3">Modified</dt>
    <dd class="col-sm-9">@Model.ModifiedDate</dd>
</dl>
<a asp-action="Edit" asp-route-id="@Model.DocumentNode" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>