@model IEnumerable<AdventureWorksUI.DTO.DocumentViewModel>

@{
    ViewData["Title"] = "Documents";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Document Node</th>
            <th>Title</th>
            <th>File Name</th>
            <th>Extension</th>
            <th>Revision</th>
            <th>Status</th>
            <th>Modified Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DocumentNode</td>
                <td>@item.Title</td>
                <td>@item.FileName</td>
                <td>@item.FileExtension</td>
                <td>@item.Revision</td>
                <td>@item.Status</td>
                <td>@item.ModifiedDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Details" asp-route-documentNode="@item.DocumentNode" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-documentNode="@item.DocumentNode" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-documentNode="@item.DocumentNode" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>