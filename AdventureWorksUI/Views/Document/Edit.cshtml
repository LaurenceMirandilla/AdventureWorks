@model AdventureWorksUI.DTO.DocumentViewModel
@{
    ViewData["Title"] = "Edit Document";
}
<h2>Edit Document</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="DocumentNode" />
    <div class="form-group">
        <label>Title</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label>File Name</label>
        <input asp-for="FileName" class="form-control" />
    </div>
    <div class="form-group">
        <label>File Extension</label>
        <input asp-for="FileExtension" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Update</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Back</a>
</form>