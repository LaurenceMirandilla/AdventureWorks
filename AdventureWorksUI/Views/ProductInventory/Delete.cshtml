@model AdventureWorksUI.DTO.ProductInventoryViewModel

@{
    ViewData["Title"] = "Delete Product Inventory";
}

<h2>Delete Confirmation</h2>

<h5>Are you sure you want to delete this inventory?</h5>

<div class="card mt-3 mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Inventory ID</dt>
            <dd class="col-sm-9">@Model.ProductInventoryId</dd>

            <dt class="col-sm-3">Product ID</dt>
            <dd class="col-sm-9">@Model.ProductId</dd>

            <dt class="col-sm-3">Location ID</dt>
            <dd class="col-sm-9">@Model.LocationId</dd>

            <dt class="col-sm-3">Quantity</dt>
            <dd class="col-sm-9">@Model.Quantity</dd>
        </dl>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ProductInventoryId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

