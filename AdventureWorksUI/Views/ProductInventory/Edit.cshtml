@model AdventureWorksUI.DTO.ProductInventoryViewModel

@{
    ViewData["Title"] = "Edit Product Inventory";
}

<h2>Edit Product Inventory</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProductInventoryId" />

    <div class="mb-3">
        <label asp-for="ProductId" class="form-label"></label>
        <input asp-for="ProductId" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="LocationId" class="form-label"></label>
        <input asp-for="LocationId" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Shelf" class="form-label"></label>
        <input asp-for="Shelf" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Bin" class="form-label"></label>
        <input asp-for="Bin" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="ModifiedDate" class="form-label"></label>
        <input asp-for="ModifiedDate" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

