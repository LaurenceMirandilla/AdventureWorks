@model AdventureWorksUI.DTO.ScrapReasonViewModel

@{
    ViewData["Title"] = "Delete Scrap Reason";
}

<h2>@ViewData["Title"]</h2>

<h4>Are you sure you want to delete this reason?</h4>

<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.ScrapReasonId</dd>

    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Modified Date</dt>
    <dd class="col-sm-10">@Model.ModifiedDate.ToString("yyyy-MM-dd")</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ScrapReasonId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
