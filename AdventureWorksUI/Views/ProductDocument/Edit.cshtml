@model AdventureWorksUI.DTO.ProductDocumentViewModel

@{
    ViewData["Title"] = "Edit Product Document";
}

<h2>Edit Product Document</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProductId" />
    <input type="hidden" asp-for="DocumentNode" />

    <div class="mb-3">
        <label asp-for="ModifiedDate" class="form-label"></label>
        <input asp-for="ModifiedDate" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>


