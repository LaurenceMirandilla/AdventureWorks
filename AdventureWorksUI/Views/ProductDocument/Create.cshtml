@model AdventureWorksUI.DTO.ProductDocumentViewModel

@{
    ViewData["Title"] = "Create Product Document";
}

<h2>Create Product Document</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="ProductId" class="form-label"></label>
        <input asp-for="ProductId" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="DocumentNode" class="form-label"></label>
        <input asp-for="DocumentNode" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="ModifiedDate" class="form-label"></label>
        <input asp-for="ModifiedDate" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}