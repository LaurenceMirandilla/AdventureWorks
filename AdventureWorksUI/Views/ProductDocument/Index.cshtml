@model IEnumerable<AdventureWorksUI.DTO.ProductDocumentViewModel>

@{
    ViewData["Title"] = "Product Documents";
}

<h2 class="mb-3">Product Documents</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add New</a>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Product ID</th>
            <th>Document Node</th>
            <th>Modified Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.DocumentNode</td>
                    <td>@item.ModifiedDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="Details" asp-route-productId="@item.ProductId" asp-route-documentNode="@item.DocumentNode" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-productId="@item.ProductId" asp-route-documentNode="@item.DocumentNode" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-productId="@item.ProductId" asp-route-documentNode="@item.DocumentNode" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="4" class="text-center">No records found.</td></tr>
        }
    </tbody>
</table>

