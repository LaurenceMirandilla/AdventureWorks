@model AdventureWorksUI.DTO.ProductDocumentViewModel

@{
    ViewData["Title"] = "Delete Product Document";
}

<h2>Delete Confirmation</h2>

<h5>Are you sure you want to delete this document?</h5>

<div class="card mt-3 mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Product ID</dt>
            <dd class="col-sm-9">@Model.ProductId</dd>

            <dt class="col-sm-3">Document Node</dt>
            <dd class="col-sm-9">@Model.DocumentNode</dd>

            <dt class="col-sm-3">Modified Date</dt>
            <dd class="col-sm-9">@Model.ModifiedDate.ToString("yyyy-MM-dd")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ProductId" />
    <input type="hidden" asp-for="DocumentNode" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

