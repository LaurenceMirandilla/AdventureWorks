@model AdventureWorksUI.DTO.LocationViewModel

@{
    ViewData["Title"] = "Location Details";
}

<h2 class="mt-4 mb-3">Location Details</h2>

@if (Model == null)
{
    <div class="alert alert-danger">
        Location not found.
    </div>
}
else
{
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Location ID</dt>
                <dd class="col-sm-9">@Model.LocationId</dd>

                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Cost Rate</dt>
                <dd class="col-sm-9">@Model.CostRate</dd>

                <dt class="col-sm-3">Availability</dt>
                <dd class="col-sm-9">@Model.Availability</dd>

                <dt class="col-sm-3">Modified Date</dt>
                <dd class="col-sm-9">@Model.ModifiedDate.ToString("yyyy-MM-dd")</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        <a asp-action="Edit" asp-route-id="@Model.LocationId" class="btn btn-primary">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.LocationId" class="btn btn-danger">Delete</a>
    </div>
}
