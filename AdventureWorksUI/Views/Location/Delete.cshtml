@model AdventureWorksUI.DTO.LocationViewModel

@{
    ViewData["Title"] = "Delete Location";
}

<h2>Delete Location</h2>

<p>Are you sure you want to delete this location?</p>

<div class="form-group">
    <label for="Name">Location Name</label>
    <input type="text" id="Name" class="form-control" value="@Model.Name" readonly />
</div>

<form method="post">
    <button type="submit" class="btn btn-danger mt-3">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary mt-3">Cancel</a>
</form>

