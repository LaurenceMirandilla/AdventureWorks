@model AdventureWorksUI.DTO.LocationViewModel

@{
    ViewData["Title"] = "Create Location";
}

<h2>Create Location</h2>

<form method="post">
    <div class="form-group">
        <label for="Name">Location Name</label>
        <input type="text" id="Name" name="Name" class="form-control"
               value="@Model?.Name" required />
    </div>

    <div class="form-group mt-2">
        <label for="CostRate">Cost Rate</label>
        <input type="number" id="CostRate" name="CostRate" class="form-control"
               value="@(Model?.CostRate ?? 0)" step="0.01" required />
    </div>

    <div class="form-group mt-2">
        <label for="Availability">Availability</label>
        <input type="number" id="Availability" name="Availability" class="form-control"
               value="@(Model?.Availability ?? 0)" step="0.01" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Create</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary mt-3">Cancel</a>
</form>
