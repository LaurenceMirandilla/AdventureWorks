@model AdventureWorksUI.DTO.WorkOrderRoutingViewModel

@{
    ViewData["Title"] = "Work Order Routing Details";
}

<h2>@ViewData["Title"]</h2>

<dl class="row">
    <dt class="col-sm-2">WorkOrder ID</dt>
    <dd class="col-sm-10">@Model.WorkOrderId</dd>

    <dt class="col-sm-2">Operation Sequence</dt>
    <dd class="col-sm-10">@Model.OperationSequence</dd>

    <dt class="col-sm-2">Product ID</dt>
    <dd class="col-sm-10">@Model.ProductId</dd>

    <dt class="col-sm-2">Location ID</dt>
    <dd class="col-sm-10">@Model.LocationId</dd>

    <dt class="col-sm-2">Scheduled Start</dt>
    <dd class="col-sm-10">@Model.ScheduledStartDate.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-2">Scheduled End</dt>
    <dd class="col-sm-10">@Model.ScheduledEndDate.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-2">Actual Start</dt>
    <dd class="col-sm-10">@Model.ActualStartDate?.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-2">Actual End</dt>
    <dd class="col-sm-10">@Model.ActualEndDate?.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-2">Actual Resource Hrs</dt>
    <dd class="col-sm-10">@Model.ActualResourceHrs</dd>

    <dt class="col-sm-2">Planned Cost</dt>
    <dd class="col-sm-10">@Model.PlannedCost</dd>

    <dt class="col-sm-2">Actual Cost</dt>
    <dd class="col-sm-10">@Model.ActualCost</dd>

    <dt class="col-sm-2">Modified Date</dt>
    <dd class="col-sm-10">@Model.ModifiedDate.ToString("yyyy-MM-dd")</dd>
</dl>

<p>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>

