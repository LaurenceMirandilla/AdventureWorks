@model AdventureWorks.UI.Models.BillOfMaterialsViewModel
@{
    ViewData["Title"] = "Delete Bill of Materials";
}

<h2>Delete Bill of Materials</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="card p-4 shadow-sm">
    <h4>Are you sure you want to delete this record?</h4>
    <dl class="row mt-3">
        <dt class="col-sm-3">BillOfMaterialsID</dt>
        <dd class="col-sm-9">@Model.BillOfMaterialsId</dd>

        <dt class="col-sm-3">ProductAssemblyID</dt>
        <dd class="col-sm-9">@Model.ProductAssemblyId</dd>

        <dt class="col-sm-3">ComponentID</dt>
        <dd class="col-sm-9">@Model.ComponentId</dd>

        <dt class="col-sm-3">StartDate</dt>
        <dd class="col-sm-9">@Model.StartDate</dd>

        <dt class="col-sm-3">EndDate</dt>
        <dd class="col-sm-9">@Model.EndDate</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="BillOfMaterialsId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>