@model AdventureWorksUI.DTO.CultureViewModel
@{
    ViewData["Title"] = "Delete Culture";
}

<h2>Are you sure you want to delete this culture?</h2>

<div class="card mt-3 p-3">
    <dl class="row">
        <dt class="col-sm-3">Culture ID</dt>
        <dd class="col-sm-9">@Model.CultureId</dd>

        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Modified Date</dt>
        <dd class="col-sm-9">@Model.ModifiedDate.ToShortDateString()</dd>
    </dl>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="CultureId" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>