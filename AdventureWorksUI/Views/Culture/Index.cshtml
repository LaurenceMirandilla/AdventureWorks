@model IEnumerable<AdventureWorksUI.DTO.CultureViewModel>
@{
    ViewData["Title"] = "Culture List";
}

<h2>@ViewData["Title"]</h2>

<!-- ✅ Search and Add -->
<form asp-action="Index" method="get" class="mb-3 d-flex">
    <input type="text" name="search" class="form-control me-2" placeholder="Search culture..." value="@Context.Request.Query["search"]" />
    <button type="submit" class="btn btn-primary me-2">Search</button>
    <a asp-action="Create" class="btn btn-success">Add New Culture</a>
</form>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<!-- ✅ Table of cultures -->
<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Culture ID</th>
            <th>Name</th>
            <th>Modified Date</th>
            <th style="width: 200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center">No cultures found.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.CultureId</td>
                    <td>@item.Name</td>
                    <td>@item.ModifiedDate.ToShortDateString()</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.CultureId" class="btn btn-info btn-sm me-1">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.CultureId" class="btn btn-warning btn-sm me-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.CultureId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>