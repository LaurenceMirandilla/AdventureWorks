@model AdventureWorksUI.DTO.CultureViewModel
@{
    ViewData["Title"] = "Edit Culture";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CultureId" />

    <div class="form-group mt-3">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="ModifiedDate" class="control-label"></label>
        <input asp-for="ModifiedDate" type="date" class="form-control" />
        <span asp-validation-for="ModifiedDate" class="text-danger"></span>
    </div>

    <div class="form-group mt-4">
        <input type="submit" value="Save Changes" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}