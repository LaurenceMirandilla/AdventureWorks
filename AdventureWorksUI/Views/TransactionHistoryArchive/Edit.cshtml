@model AdventureWorksUI.DTO.TransactionHistoryArchiveViewModel

@{
    ViewData["Title"] = "Edit Transaction";
}

<h2>@ViewData["Title"]</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="TransactionId" />
    <div class="form-group">
        <label asp-for="ProductId"></label>
        <input asp-for="ProductId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ReferenceOrderId"></label>
        <input asp-for="ReferenceOrderId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ReferenceOrderLineId"></label>
        <input asp-for="ReferenceOrderLineId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TransactionDate"></label>
        <input asp-for="TransactionDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TransactionType"></label>
        <input asp-for="TransactionType" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ActualCost"></label>
        <input asp-for="ActualCost" type="number" step="0.01" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ModifiedDate"></label>
        <input asp-for="ModifiedDate" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

