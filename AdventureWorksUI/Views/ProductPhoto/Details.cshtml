@model AdventureWorksUI.DTO.ProductPhotoViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Product Photo ID</dt>
        <dd class="col-sm-10">@Model.ProductPhotoId</dd>

        <dt class="col-sm-2">Thumbnail File</dt>
        <dd class="col-sm-10">@Model.ThumbnailPhotoFileName</dd>

        <dt class="col-sm-2">Large Photo File</dt>
        <dd class="col-sm-10">@Model.LargePhotoFileName</dd>

        <dt class="col-sm-2">Modified Date</dt>
        <dd class="col-sm-10">@Model.ModifiedDate.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>

<p>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>

