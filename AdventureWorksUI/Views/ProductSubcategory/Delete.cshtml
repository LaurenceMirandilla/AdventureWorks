@model AdventureWorksUI.DTO.ProductSubCategoryViewModel

@{
    ViewData["Title"] = "Delete Product Subcategory";
}

<h2>@ViewData["Title"]</h2>

<h4>Are you sure you want to delete this subcategory?</h4>

<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.ProductSubcategoryId</dd>

    <dt class="col-sm-2">Category ID</dt>
    <dd class="col-sm-10">@Model.ProductCategoryId</dd>

    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">RowGuid</dt>
    <dd class="col-sm-10">@Model.RowGuid</dd>

    <dt class="col-sm-2">Modified Date</dt>
    <dd class="col-sm-10">@Model.ModifiedDate.ToString("yyyy-MM-dd")</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ProductSubcategoryId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

