@model AdventureWorksUI.DTO.ProductCategoryViewModel

@{
    ViewData["Title"] = "Delete Product Category";
}

<div class="container mt-5">
    <h2 class="text-danger mb-4">Delete Product Category</h2>

    <div class="card shadow-sm p-4">
        <h4>Are you sure you want to delete this record?</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">Product Category ID</dt>
            <dd class="col-sm-9">@Model.ProductCategoryId</dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Rowguid</dt>
            <dd class="col-sm-9">@Model.Rowguid</dd>

            <dt class="col-sm-3">Modified Date</dt>
            <dd class="col-sm-9">@Model.ModifiedDate.ToString("yyyy-MM-dd")</dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="ProductCategoryId" />
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>
        </form>
    </div>
</div>

