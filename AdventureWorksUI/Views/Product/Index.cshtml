@model IEnumerable<AdventureWorksUI.DTO.ProductDTO>

@{
    ViewData["Title"] = "Products";
}

<h2 class="mb-3">Product List</h2>

<form method="get" class="mb-3">
    <input type="text" name="search" value="@ViewBag.Search" placeholder="Search by name..." class="form-control w-25 d-inline" />
    <button type="submit" class="btn btn-primary">Search</button>
    <a href="@Url.Action("Create")" class="btn btn-success float-end">Add New Product</a>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Product Number</th>
            <th>List Price</th>
            <th>Standard Cost</th>
            <th>Color</th>
            <th>Modified Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.ProductNumber</td>
                <td>@item.ListPrice</td>
                <td>@item.StandardCost</td>
                <td>@item.Color</td>
                <td>
                    <a href="@Url.Action("Details", new { id = item.ProductId })" class="btn btn-info btn-sm">View</a>
                    <a href="@Url.Action("Edit", new { id = item.ProductId })" class="btn btn-warning btn-sm">Edit</a>
                    <a href="@Url.Action("Delete", new { id = item.ProductId })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

