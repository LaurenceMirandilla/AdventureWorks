@model AdventureWorksUI.DTO.ProductReviewViewModel

@{
    ViewData["Title"] = "Delete Product Review";
}

<h2>@ViewData["Title"]</h2>

<h4>Are you sure you want to delete this review?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Product Review ID</dt>
        <dd class="col-sm-10">@Model.ProductReviewId</dd>

        <dt class="col-sm-2">Product ID</dt>
        <dd class="col-sm-10">@Model.ProductId</dd>

        <dt class="col-sm-2">Reviewer Name</dt>
        <dd class="col-sm-10">@Model.ReviewerName</dd>

        <dt class="col-sm-2">Rating</dt>
        <dd class="col-sm-10">@Model.Rating</dd>

        <dt class="col-sm-2">Review Date</dt>
        <dd class="col-sm-10">@Model.ReviewDate.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ProductReviewId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
