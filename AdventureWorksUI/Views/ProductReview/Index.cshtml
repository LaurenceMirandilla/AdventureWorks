@model IEnumerable<AdventureWorksUI.DTO.ProductReviewViewModel>

@{
    ViewData["Title"] = "Product Reviews";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Review ID</th>
            <th>Product ID</th>
            <th>Reviewer Name</th>
            <th>Rating</th>
            <th>Review Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductReviewId</td>
                <td>@item.ProductId</td>
                <td>@item.ReviewerName</td>
                <td>@item.Rating</td>
                <td>@item.ReviewDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ProductReviewId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.ProductReviewId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.ProductReviewId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
