@model AdventureWorksUI.DTO.ProductModelIllustrationViewModel
@{
    ViewData["Title"] = "Create - Product Model Illustration";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ProductModelId" class="control-label"></label>
        <input asp-for="ProductModelId" class="form-control" />
        <span asp-validation-for="ProductModelId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IllustrationId" class="control-label"></label>
        <input asp-for="IllustrationId" class="form-control" />
        <span asp-validation-for="IllustrationId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ModifiedDate" class="control-label"></label>
        <input asp-for="ModifiedDate" class="form-control" type="date" />
        <span asp-validation-for="ModifiedDate" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-2">@ViewBag.Error</div>
    }
</form>

