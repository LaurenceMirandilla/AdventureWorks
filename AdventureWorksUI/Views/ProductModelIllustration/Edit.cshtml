@model AdventureWorksUI.DTO.ProductModelIllustrationViewModel
@{
    ViewData["Title"] = "Edit - Product Model Illustration";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProductModelId" />
    <input type="hidden" asp-for="IllustrationId" />

    <div class="form-group">
        <label asp-for="ProductModelIllustrationId" class="control-label"></label>
        <input asp-for="ProductModelIllustrationId" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="ProductModelId" class="control-label"></label>
        <input asp-for="ProductModelId" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="IllustrationId" class="control-label"></label>
        <input asp-for="IllustrationId" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="ModifiedDate" class="control-label"></label>
        <input asp-for="ModifiedDate" class="form-control" type="date" />
    </div>

    <br />
    <button type="submit" class="btn btn-success">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-2">@ViewBag.Error</div>
    }
</form>
