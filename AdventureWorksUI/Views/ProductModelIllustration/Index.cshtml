@model IEnumerable<AdventureWorksUI.DTO.ProductModelIllustrationViewModel>
@{
    ViewData["Title"] = "Product Model Illustrations";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ProductModelIllustrationId</th>
            <th>ProductModelId</th>
            <th>IllustrationId</th>
            <th>ModifiedDate</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductModelIllustrationId</td>
                <td>@item.ProductModelId</td>
                <td>@item.IllustrationId</td>
                <td>@item.ModifiedDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Details" asp-route-productModelId="@item.ProductModelId" asp-route-illustrationId="@item.IllustrationId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-productModelId="@item.ProductModelId" asp-route-illustrationId="@item.IllustrationId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-productModelId="@item.ProductModelId" asp-route-illustrationId="@item.IllustrationId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
