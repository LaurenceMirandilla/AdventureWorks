@model AdventureWorksUI.DTO.ProductModelIllustrationViewModel
@{
    ViewData["Title"] = "Delete - Product Model Illustration";
}

<h2>@ViewData["Title"]</h2>

<h4>Are you sure you want to delete this record?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-3">Product Model Illustration ID</dt>
    <dd class="col-sm-9">@Model.ProductModelIllustrationId</dd>

    <dt class="col-sm-3">Product Model ID</dt>
    <dd class="col-sm-9">@Model.ProductModelId</dd>

    <dt class="col-sm-3">Illustration ID</dt>
    <dd class="col-sm-9">@Model.IllustrationId</dd>

    <dt class="col-sm-3">Modified Date</dt>
    <dd class="col-sm-9">@Model.ModifiedDate.ToString("yyyy-MM-dd")</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ProductModelId" />
    <input type="hidden" asp-for="IllustrationId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

