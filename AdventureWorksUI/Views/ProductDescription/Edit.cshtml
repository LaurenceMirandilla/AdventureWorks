@model AdventureWorksUI.DTO.ProductDescriptionViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Product Description</h2>

<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="ProductDescriptionId" />

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ModifiedDate" class="form-label"></label>
        <input asp-for="ModifiedDate" class="form-control" type="date" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

