@model IEnumerable<AdventureWorksUI.DTO.ProductDescriptionViewModel>

@{
    ViewData["Title"] = "Product Descriptions";
}

<h2 class="mb-3">Product Descriptions</h2>

<form method="get" class="mb-3 d-flex">
    <input type="text" name="keyword" class="form-control me-2" placeholder="Search description..." />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">Add New</a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">No product descriptions found.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Description</th>
                <th>Rowguid</th>
                <th>Modified Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductDescriptionId</td>
                    <td>@item.Description</td>
                    <td>@item.Rowguid</td>
                    <td>@item.ModifiedDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.ProductDescriptionId" class="btn btn-info btn-sm">View</a>
                        <a asp-action="Edit" asp-route-id="@item.ProductDescriptionId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.ProductDescriptionId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    }
}